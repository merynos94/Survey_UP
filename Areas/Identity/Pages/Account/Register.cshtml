@page

@model RegisterModel
@{
    ViewData["Title"] = "Zarejestruj się";
}

<h3>@ViewData["Title"]</h3>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div class="row">
        <div class="col-md-4">

            <h5>Stwórz nowe konto</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.MiddleName"></label>
                <input asp-for="Input.MiddleName" class="form-control" />
                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.NameMother"></label>
                <input asp-for="Input.NameMother" class="form-control" />
                <span asp-validation-for="Input.NameMother" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NameFather"></label>
                <input asp-for="Input.NameFather" class="form-control" />
                <span asp-validation-for="Input.NameFather" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Pesel"></label>
                <input asp-for="Input.Pesel" class="form-control" />
                <span asp-validation-for="Input.Pesel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthPlace"></label>
                <input asp-for="Input.BirthPlace" class="form-control" />
                <span asp-validation-for="Input.BirthPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6 col-md-offset-2">
            <small id="help" class="form-text text-muted">Dodatkowe wymagane dane</small>
            <hr />

            <div class="form-group">
                <label asp-for="Input.AlbumNumber"></label>
                <input asp-for="Input.AlbumNumber" class="form-control" />
                <span asp-validation-for="Input.AlbumNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Department"></label>
                <input asp-for="Input.Department" class="form-control" />
                <span asp-validation-for="Input.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UniversityDirection"></label>
                <input asp-for="Input.UniversityDirection" class="form-control" />
                <span asp-validation-for="Input.UniversityDirection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Degree"></label>
                <input asp-for="Input.Degree" class="form-control" />
                <span asp-validation-for="Input.Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LearningForm"></label>
                <input asp-for="Input.LearningForm" class="form-control" />
                <span asp-validation-for="Input.LearningForm" class="text-danger"></span>
            </div>
            <small id="help" class="form-text text-muted">Adres stały</small>
            <hr />
            <div class="form-group">
                <label asp-for="Input.PermanentAddress"></label>
                <input asp-for="Input.PermanentAddress" class="form-control" />
                <span asp-validation-for="Input.PermanentAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PermanentCity"></label>
                <input asp-for="Input.PermanentCity" class="form-control" />
                <span asp-validation-for="Input.PermanentCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PermanentPostalCode"></label>
                <input asp-for="Input.PermanentPostalCode" class="form-control" />
                <span asp-validation-for="Input.PermanentPostalCode" class="text-danger"></span>
            </div>
            <small id="help" class="form-text text-muted">Adres do korespondencji</small>
            <hr />
            <div class="form-group">
                <label asp-for="Input.CorrespondAddress"></label>
                <input asp-for="Input.CorrespondAddress" class="form-control" />
                <span asp-validation-for="Input.CorrespondAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CorrespondCity"></label>
                <input asp-for="Input.CorrespondCity" class="form-control" />
                <span asp-validation-for="Input.CorrespondCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CorrespondPostalCode"></label>
                <input asp-for="Input.CorrespondPostalCode" class="form-control" />
                <span asp-validation-for="Input.CorrespondPostalCode" class="text-danger"></span>
            </div>


        </div>
    </div>
    <button type="submit" class="btn btn-primary">Zarejestruj</button>
</form>

<section>

    @{
        if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
        }
        else
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        }
    }
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}