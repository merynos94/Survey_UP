@page
@model SurveyUP.Pages.Users.IndexModel

<p>
    <a asp-page="Create" class="btn btn-success">Stwórz nowego użytkownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUsers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUsers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUsers[0].Email)
            </th>
            <th>
                Użytkownik potwierdzony
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUsers[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AspNetUsers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                <a asp-page="./ConfirmEmail" asp-route-id="@item.Id" class="btn btn-primary">Potwierdź konto</a>
                <a asp-page="./ChangeRole" asp-route-id="@item.Id" class="btn btn-primary">Zmień rolę</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">Szczegóły</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="../Index" class="btn btn-danger">Powrót do strony głównej</a>
</div>