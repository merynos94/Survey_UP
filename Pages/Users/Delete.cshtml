@page
@model SurveyUP.Pages.Users.DeleteModel

<h3>Czy chcesz usunąć użytkownika?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AspNetUsers.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUsers.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AspNetUsers.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUsers.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUsers.Email)
        </dd>
        <dt class="col-sm-2">
            Użytkownik potwierdzony
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUsers.EmailConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AspNetUsers.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUsers.PhoneNumber)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="AspNetUsers.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-danger">Powrót do listy użytkowników</a>
    </form>
</div>
