@page
@model SurveyUP.Views.Answers.EditModel

<h4>Edytuj Odpowiedź</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VtsTbAnswer.AnswerId" />
            <div class="form-group">
                <label asp-for="VtsTbAnswer.QuestionId" class="control-label"></label>
                <select asp-for="VtsTbAnswer.QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                <span asp-validation-for="VtsTbAnswer.QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VtsTbAnswer.AnswerText" class="control-label"></label>
                <input asp-for="VtsTbAnswer.AnswerText" class="form-control" />
                <span asp-validation-for="VtsTbAnswer.AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VtsTbAnswer.DefaultText" class="control-label"></label>
                <input asp-for="VtsTbAnswer.DefaultText" class="form-control" />
                <span asp-validation-for="VtsTbAnswer.DefaultText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VtsTbAnswer.AnswerTypeId" class="control-label"></label>
                <select asp-for="VtsTbAnswer.AnswerTypeId" class="form-control" asp-items="ViewBag.AnswerTypeId"></select>
                <span asp-validation-for="VtsTbAnswer.AnswerTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-danger">Powrót do listy odpowiedzi</a>
</div>

